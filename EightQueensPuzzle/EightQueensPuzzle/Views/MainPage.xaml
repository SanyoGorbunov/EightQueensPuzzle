<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:EightQueensPuzzle.ViewModels;assembly=EightQueensPuzzle"
             x:Class="EightQueensPuzzle.Views.MainPage">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <Button Text="Simulation"
                Command="{Binding NavigateToSimulationSetup}"></Button>
        <Button Text="Solutions"
                Command="{Binding NavigateToSolutions}"></Button>
        <Button Text="Benchmarks"
                Command="{Binding NavigateToBenchmarks}"></Button>
    </StackLayout>

</ContentPage>
